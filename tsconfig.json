{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom", "dom.iterable"],
    "types": ["vite/client"]
  },
  "include": [".vitepress/**/*.ts", ".vitepress/**/*.mts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
  "exclude": ["**/node_modules/**", "**/dist/**", "template", "bin", "docs/snippets", "scripts"]
}
